/* components/Grant/Grant.wxss */
.grant-container{
  background: #fff;
  box-shadow: 0rpx 0rpx 20rpx rgba(0,0,0,0.1);
  width: 600rpx;
  height: 600rpx;
  padding: 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
}
.grant-title{
  font-family: 'PingFangSC-Medium';
  font-size: 31rpx;
}
button{
  width: 500rpx;
  height: 80rpx;
  background: #000;
  color: #fff;
}