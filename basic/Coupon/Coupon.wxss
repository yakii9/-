/* components/Coupon/Coupon.wxss */
.coupon{
  display: flex;
  color: #fff;
}
.coupon image{
  position: relative;
  width: 100%;
  height: 100%;
}
.useBtn{
  position: absolute;
  height: 100%;
  width: 30%;
  right: 0;
  top: 0;
  background: red;
  opacity: 0
}
.coupon-text{
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
  height: 100%;
  box-sizing: border-box;
  padding: 18rpx;
}
.coupon-title{
  color: #EBEBEB;
  font-size: 20px;
  font-family: PingFangSC-Regular;
}
.coupon-detail{
  color: #ABAAA8;
  font-size: 12px;
}