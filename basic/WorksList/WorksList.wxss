/* components/WorksList/WorksList.wxss */
.works-outer-box{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between
}
.works-box{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 18rpx;
  align-items: center;
  width: 330rpx;
}
.works-img-box{
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  width: 330rpx;
  height: 330rpx;
  background-color: #eee;
  border-radius: 15rpx;
}
.works-img-box image{
  width: 150rpx;
  height: 250rpx;
  border-radius: 15rpx;
}
.works-box-stars{
  position: absolute;
  right: 14rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 22rpx;
  color: #888888;
}
.works-box-stars image{
  width: 42rpx;
  height: 38rpx;
}
.star-active{
  color: #FF4A55;
}
.goods-info-box{
  position: relative;
  display: flex;
  justify-content: flex-start;
  width: 100%;
  color: #000;
  font-family: PingFangSC;

}
.goods-info{
  display: flex;
  flex-direction: column;
  font-family: PingFangSC;
  margin-left: 10rpx;
}
.goods-name{
  font: 28rpx  PingFangSC;
  height: 40rpx;
}
.price{
  color: #FF4A55;
  font: 26rpx PingFangSC;
  margin-left: -4rpx;
  height: 36rpx;
}
.gray{
  color: #888888;
  font-size: 22rpx;
  height: 32rpx;
}
.goods-name-mine{
  font-size: 24rpx;
  font-weight: bold;
  line-height: 34rpx;
  color: #222222;
}
.star-num{
  font-size: 20rpx;
  color: #222222;
  line-height: 28rpx;
}
.works-stars-mine image{
  width: 42rpx;
  height: 40rpx;
}
.recommend{
  color: #000;
  width: 330rpx;
}
.works-box-tags{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 18rpx;
  align-items: center;
  width: 330rpx;
}

/*推荐*/
.recommend{
  padding-top: 28rpx;
}
.recommend-title{
  font-family: 'PingFangSC-Regular';
  font-size: 24rpx;
  margin-bottom: 10rpx;
  line-height: 60rpx;
  color: #1B1B1B
}
.tag-container{
  display: flex;
  width: 330rpx;
  margin-bottom: 47rpx;
  flex-wrap: wrap;
}
.recommend-tag{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 49rpx;
  background: #464646;
  border-radius: 30rpx;
  padding: 0 15rpx;
  color: #F6F6F6;
  margin-right: 14rpx;
  margin-top: 13rpx;
}
